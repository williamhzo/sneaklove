<h2 class='products-title cart-title'>Shopping cart</h2>

<tbody>
  {{#each sneakers}}
    <tr class="table-row">
      <td class="table-division">
        <div><img src="{{this.image}}" alt="img" class="table-image" /></div>
      </td>
      <td class="table-division">
        <div>{{this.name}}</div>
      </td>
      <td class="table-division">
        <div>{{this.ref}}</div>
      </td>
      <td class="table-division">
        <div>${{this.price}}</div>
      <td class="table-division">
        <span id="remove-from-cart" class="fa fa-trash table-icon" data-id-sneaker="{{this._id}}" aria-hidden="true"></span>
      </td>
    </tr>
  {{/each}}

  {{#unless sneakers}}
    <tr>
      <td colspan="6">sorry no sneakers yet</td>
    </tr>
  {{/unless}}
</tbody>